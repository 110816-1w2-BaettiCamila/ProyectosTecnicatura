
@model AeropuertoBAETTI.Models.Vuelo
@{
    ViewBag.Title = "AltaVuelos";
    //List<SelectListItem> items = (List<SelectListItem>)ViewBag.items;
    //List<SelectListItem> itemm = (List<SelectListItem>)ViewBag.itemm;
    IEnumerable<SelectListItem> items = (IEnumerable<SelectListItem>)ViewBag.items;
    IEnumerable<SelectListItem> itemm = (IEnumerable<SelectListItem>)ViewBag.itemm;
    @ViewBag.Script
}

<div class="row">
    <div class="col-sm-12">
        <div>
            <h4>Alta de nuevos vuelos</h4>
        </div>
    </div>
</div>

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-lg-6">
            <div class="form-horizontal">

                <div class="form-group">
                    <label class="col-sm-6 control-label">
                        Tipo de Vuelo:
                    </label>
                    <div class="col-sm-6  tooltiptext">
                        <span class="tooltiptext">1: vuelos de cabotaje 2:Vuelos Internacionales</span>
                        @Html.TextBoxFor(model => model.ptipo, htmlAttributes: new { @class = "form-control", @id = "txtTipo" })

                    </div>
                </div>


                <div class="form-group">
                    <label class="col-sm-6 control-label">
                        Observaciones:
                    </label>
                    <div class="col-sm-6">
                        @Html.TextAreaFor(model => model.pobservaciones, htmlAttributes: new { @class = "form-control", @id = "txtObservaciones" })

                    </div>
                </div>


                <div class="form-group">
                    <label class="col-sm-6 control-label">
                        Destino:
                    </label>
                    <div class="col-sm-6">
                        @Html.DropDownList("idDestino", items, "Seleccione destino", htmlAttributes: new { @class = "form-control" })

                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">
                        Tipo de carga:
                    </label>
                    <div class="col-sm-6">
                        @Html.DropDownList("idTipoCarga", itemm, "Seleccione tipo de carga", htmlAttributes: new { @class = "form-control" })

                    </div>
                </div>


                <div class="form-group">
                    <label class="col-sm-6 control-label">
                        Fecha:
                    </label>
                    <div class="col-sm-6">
                        @*<--@Html.(model => model.telefono, htmlAttributes: new { @class = "form-control", @id = "txtTelefonoPersona" })-->*@
                        <div class="editor-field">
                            @Html.TextBoxFor(model => model.pfecha, new { @Value = DateTime.Now, id = "datepicker" })
                            @Html.ValidationMessageFor(model => model.pfecha)
                        </div>
                    </div>
                </div>




                <div class="form-group text-rigth">
                    <div class="col-sm-12">
                        <button class="btn btn-primary" type="submit">
                            Guardar Vuelo
                        </button>

                    </div>
                </div>
            </div>
        </div>

    </div>
}